{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "sort-destructure-keys"],
  "rules": {
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "react/self-closing-comp": 2,
    "no-else-return": 2,
    "react/jsx-sort-props": 2,
    "@typescript-eslint/no-empty-interface": 0,
    "arrow-body-style": 2,
    "sort-destructure-keys/sort-destructure-keys": 2,
    "no-restricted-imports": [
      "error",
      {
        // "paths": ["import1", "import2"],
        // "patterns": ["components/*"]
      }
    ]
  },
  "ignorePatterns": [
    "/node_modules",
    "/dist",
    "/.vscode",
    "/.github",
    "/src/assets",
    "/static",
    "/functions",
    "/public"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
